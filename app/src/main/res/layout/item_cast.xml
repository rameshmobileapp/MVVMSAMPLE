<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_cast"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:textSize="10sp"
        android:id="@+id/txt_cast_name"
        style="@style/RobotoLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/semi_gray"
        app:layout_constraintEnd_toEndOf="@+id/img_cast"
        app:layout_constraintStart_toStartOf="@+id/img_cast"
        app:layout_constraintTop_toBottomOf="@+id/img_cast" />

</androidx.constraintlayout.widget.ConstraintLayout>